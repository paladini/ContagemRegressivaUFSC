{
	"name": "Contagem Regressiva UFSC",
	"version": "0.3.1",
	"permissions": [
		"activeTab"
	],
	"background": {
		"page": "background.html"
	},
	"browser_action": {
		"default_icon": "images/icon128.png",
		"default_title": "Contagem Regressiva UFSC"
	},
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"manifest_version": 2,
	"permissions": [
		"alarms",
		"tabs",
		"http://*/*"
	]
}
